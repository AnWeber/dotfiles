#!/usr/bin/env bash


tag="main"
while [ : ]; do
  case "$1" in
    --tag)
        tag=$2
        shift
        shift
        ;;
    --fetch)
       autoFetch=1
       shift
       ;;
    --) shift;
        break
        ;;
    *) break;;
  esac
done


if [[ $tag == "all" ]]; then
  if ! [ -z "$autoFetch" ]; then
    mani exec --silent --omit-empty --all -- "git fetch --quiet --prune"
  fi
  mani run view --all
else
  if ! [ -z "$autoFetch" ]; then
    mani exec --silent --omit-empty --tags $tag -- "git fetch --quiet --prune"
  fi
  mani run view --tags $tag
fi
